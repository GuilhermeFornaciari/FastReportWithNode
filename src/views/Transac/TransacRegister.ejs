<%- include("./Modules/head.ejs") %>

    
  <body>
    <%- include('./Modules/Header.ejs') %>
    <main>
      <section class="sectionData">

        <h2 class="center">Cadastro de novas transações</h2>
        <h3 class="center">Digite os dados desta nova transação</h3>
        <form action="/Transac/Register" method="post" class="forms">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="input">
            <label for="name">Destinatário:</label>
            <input type="text" value="" name="receiver" />
          </div>

          <div class="input">
            <label for="lastname">Data:</label>
            <input type="date" value="" name="date" />
          </div>

          <div class="input">
            <label for="fone">Valor:</label>
            <input type="number" value="" name="value" />
          </div>
          <button class="bnt green">Adicionar transação</button>
        </form>
      </section>
    </main>
    <%- include("./Modules/footer.ejs") %>
  </body>
</html>
