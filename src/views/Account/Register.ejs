<%- include("./Modules/head.ejs") %>

  <body>
    <%- include('./Modules/Header.ejs') %>
    <main>
      <section class="sectionData">
        <h1 class="center">Registrar Usuario</h1>
        <h3 class="center">Digite os seus dados para cadastro</h3>
        <p class="center">
          Você já possui cadastro?
          <a href="/Account/Login">Faça login! </a>
        </p>
        <%- include('./Modules/msgs.ejs') %>
        <form action="/Account/Register" method="post" class="forms">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <div class="input">
            <label for="username">Nome de usuário:</label>
            <input type="text" value="" name="username" />
          </div>

          <div class="input">
            <label for="email">Email:</label>
            <input type="text" value="" name="email" />
          </div>

          <div class="input">
            <label for="password">Senha:</label>
            <input type="password" value="" name="password" />
          </div>

          <div class="input">
            <label for="password2">Confirme sua senha:</label>
            <input type="password" value="" name="password2" />
          </div>

          <button class="bnt green">Criar contato</button>
        </form>
      </section>
    </main>

    <%- include("./Modules/footer.ejs") %>
  </body>
</html>
