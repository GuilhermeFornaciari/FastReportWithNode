<%- include("./Modules/head.ejs") %>

  <body>
    <%- include('./Modules/Header.ejs') %>
    <main>
      <section class="sectionData">
        <h2 class="center">Cadastro de novos funcionarios</h2>
        <h3 class="center">Digite os dados deste novo funcionario</h3>
        <%- include('./Modules/msgs.ejs') %>
