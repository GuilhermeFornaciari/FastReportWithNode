          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="input">
            <label for="name">Nome:</label>
            <input type="text" value="" name="Ename" />
          </div>

          <div class="input">
            <label for="lastname">Sobrenome:</label>
            <input type="text" value="" name="surname" />
          </div>

          <div class="input">
            <label for="email">Email:</label>
            <input type="text" value="" name="email" />
          </div>

          <div class="input">
            <label for="fone">Data de contratação:</label>
            <input type="date" value="" name="hiringDate" />
          </div>
          <div class="input">
            <label for="fone">Função (cargo):</label>
            <input type="text" value="" name="role" />
          </div>
          <button class="bnt green">Criar contato</button>
        </form>
      </section>
    </main>

    <%- include("./Modules/footer.ejs") %>
    <script src="./assets/js/bundle.js"></script>

    
  </body>
</html>
